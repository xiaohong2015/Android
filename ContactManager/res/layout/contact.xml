<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText 
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="姓名"/>
    <EditText 
        android:id="@+id/phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="手机"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/send"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="发短信"/>
    <Button 
        android:id="@+id/call"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="打电话"/>
    </LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <Button 
        android:id="@+id/add"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="保存"/>
    <Button 
        android:id="@+id/back"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="取消"/>
    </LinearLayout>
    
</LinearLayout>